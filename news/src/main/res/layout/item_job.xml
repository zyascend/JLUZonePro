<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    style="@style/NormalCard">
    <RelativeLayout

        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:maxWidth="150dp"
            android:maxLines="1"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_title"
            android:drawableStart="@drawable/ic_place"
            android:drawablePadding="4dp"
            android:textSize="14sp"
            tools:text="jiaowukadda"
            android:textColor="@color/material_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_place" />

        <TextView
            tools:text="dmashdansdhasdansdhjansdnakosdhjkandsklnodhskandksahjd"
            android:textSize="16sp"
            android:id="@+id/tv_title"
            android:maxLines="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />


        <TextView
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_date"
            android:id="@+id/tv_date"
            android:textSize="14sp"
            tools:text="2016-07-22"
            android:textColor="@color/material_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_alignBottom="@+id/tv_place"
            android:layout_toStartOf="@+id/tv_hits" />

        <TextView
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_hits"
            android:textColor="@color/material_green"
            android:id="@+id/tv_hits"
            tools:text="558"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tv_title" />
    </RelativeLayout>
</android.support.v7.widget.CardView>