<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView style="@style/MainCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:layout_marginStart="10dp"
                android:drawableStart="@drawable/ic_weather"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="今日天气"
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_alignParentEnd="true"                android:id="@+id/iv_weather_refresh"
                android:src="@drawable/ic_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--<ImageView-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_marginEnd="10dp"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:id="@+id/iv_weather_close"-->
                <!--android:src="@drawable/ic_close"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->
        </RelativeLayout>

        <RelativeLayout
            android:background="#189BFA"
            android:layout_width="match_parent"
            android:layout_height="170dp">

            <TextView
                android:id="@+id/city"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:textSize="25sp"
                android:textColor="@android:color/white"
                android:text="长春"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/weather"
                android:layout_below="@+id/city"
                android:layout_marginTop="10dp"
                android:layout_marginStart="18dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                tools:text="晴"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tmp"
                android:fontFamily="sans-serif-thin"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="15dp"
                android:textSize="45sp"
                android:textColor="@android:color/white"
                tools:text="11°"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/weather_image"
                tools:src="@drawable/ic_sunny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="17dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>